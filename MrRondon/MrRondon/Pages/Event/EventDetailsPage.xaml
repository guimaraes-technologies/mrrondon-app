<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MrRondon.Pages.Event.EventDetailsPage"
             Title="{Binding Event.Name}"
             BackgroundColor="{StaticResource PageBackgroundColor}">

    <ContentPage.Content>
        <StackLayout>
            <Label Text="{Binding Event.Name}"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            
            <Button Text="Call Love" Command="{Binding MakePhoneCallCommand}"></Button>
            <Button Text="Open Map" Command="{Binding OpenMapCommand}"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>