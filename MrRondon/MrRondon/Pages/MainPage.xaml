<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:map="clr-namespace:MrRondon.Pages.Map"
             xmlns:category="clr-namespace:MrRondon.Pages.Category"
             xmlns:event="clr-namespace:MrRondon.Pages.Event"
             xmlns:historicalSight="clr-namespace:MrRondon.Pages.HistoricalSight"
             x:Class="MrRondon.Pages.MainPage"
            BackgroundColor="{StaticResource PrimaryColor}">

    <NavigationPage Title="Mapa" BackgroundColor="{StaticResource PrimaryColor}">
        <x:Arguments>
            <map:MapPage />
        </x:Arguments>
    </NavigationPage>
    <NavigationPage Title="Categoria" BackgroundColor="{StaticResource PrimaryColor}">
        <x:Arguments>
            <category:ListCategoriesPage />
        </x:Arguments>
    </NavigationPage>
    <NavigationPage Title="Evento" BackgroundColor="{StaticResource PrimaryColor}">
        <x:Arguments>
            <event:ListEventPage />
        </x:Arguments>
    </NavigationPage>
    <NavigationPage Title="Locais Histórico" BackgroundColor="{StaticResource PrimaryColor}">
        <x:Arguments>
            <historicalSight:ListHistoricalSightPage />
        </x:Arguments>
    </NavigationPage>
</TabbedPage>