<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MrRondon.Pages.ErrorPage"
             Title="{Binding Title}">
    <ScrollView>
        <StackLayout Padding="10" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
            <Image Source="{Binding Image}" HorizontalOptions="Center" MinimumHeightRequest="120" MinimumWidthRequest="130"></Image>

            <Label Text="{Binding Error}" FontSize="Large" TextColor="{StaticResource Accent}"/>
        </StackLayout>
    </ScrollView>
</ContentPage>