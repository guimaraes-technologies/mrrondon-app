<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MrRondon.Pages.Account.ConfigurationPage"
             Title="{Binding Title}"
             Style="{StaticResource PageStyle}"
             BackgroundColor="{StaticResource PageBackgroundColor}">

    <StackLayout>
        <Label Text="Escolha abaixo até quantos metros você quer vizualizar lugares no mapa" Style="{StaticResource PrimaryLabel}" HorizontalOptions="Start" />

        <Label Text="{Binding PlaceDescription}" Style="{StaticResource PrimaryLabel}" HorizontalOptions="CenterAndExpand" />
        <Slider Value="{Binding PlaceUntil}" Minimum="0.10" Maximum="100" ValueChanged="PlaceUntil_OnValueChanged" />
    </StackLayout>
</ContentPage>