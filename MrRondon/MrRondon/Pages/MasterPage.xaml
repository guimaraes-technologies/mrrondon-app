<?xml version="1.0" encoding="utf-8" ?>
<MasterDetailPage xmlns="http://xamarin.com/schemas/2014/forms"
                  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                  xmlns:views="clr-namespace:MrRondon.Pages"
                  x:Class="MrRondon.Pages.MasterPage"
                  IsPresented="{Binding IsPresented}"
                  Title="{Binding Title}">

    <MasterDetailPage.Master>
        <ContentPage  BackgroundColor="#fafafa" Padding="0">
            <StackLayout>
                <StackLayout BackgroundColor="#00ACC1" HeightRequest="80">
                    <Label x:Name="menuTitle" Text="{Binding MenuTitle, StringFormat='Bem Vindo(a), {0}'}"
                   FontSize="Small"
                   VerticalOptions="CenterAndExpand"
                   TextColor="White"
                   HorizontalOptions="Center"/>
                    <BoxView Margin="0" HeightRequest="1" Color="Gray"></BoxView>
                </StackLayout>

                <ListView ItemsSource="{Binding Items}"
                              HorizontalOptions="FillAndExpand"
                              VerticalOptions="FillAndExpand"
                              RowHeight="60"
                              ItemSelected="OnMenuItemSelected"
                              SeparatorVisibility="None">

                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <StackLayout VerticalOptions="FillAndExpand"
                                     Orientation="Horizontal"
                                     Padding="30,10,0,10"
                                     Spacing="15">

                                    <Image Source="{Binding Icon}"
                                   WidthRequest="40"
                                   HeightRequest="40"
                                   VerticalOptions="Center" />

                                    <Label Text="{Binding Title}"
                                   FontSize="Medium"
                                           FontAttributes="Bold"
                                   VerticalOptions="Center"
                                   TextColor="#3f3f3f"/>
                                </StackLayout>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <Grid RowSpacing="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions >
                        <ColumnDefinition Width=".50*" />
                        <ColumnDefinition Width=".50*" />
                    </Grid.ColumnDefinitions>

                    <Label Grid.Column="0" Grid.Row="0" Margin="10,0,0,0" Text="{Binding AppVersion}" TextColor="#3f3f3f" FontSize="Small"></Label>
                    <Label Grid.Column="0" Grid.Row="1" Margin="10,0,0,0" Text="SETUR - Superintendência Estadual do Turismo" TextColor="{StaticResource PrimaryLabelColor}" FontSize="Micro"></Label>
                    <Image Grid.Column="1" Grid.Row="0" Grid.RowSpan="2" Source="brasao" HeightRequest="25"></Image>
                </Grid>
            </StackLayout>
        </ContentPage>
    </MasterDetailPage.Master>
    <MasterDetailPage.Detail>
        <views:MainPage></views:MainPage>
    </MasterDetailPage.Detail>
</MasterDetailPage>